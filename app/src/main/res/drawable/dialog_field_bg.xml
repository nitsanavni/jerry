<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <layer-list android:paddingMode="nest">
            <item android:bottom="0px" android:left="-3dp" android:right="-3dp" android:top="-3dp">
                <shape>
                    <stroke android:width="2dp" android:color="@color/reminder_color" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list android:paddingMode="nest">
            <item android:bottom="0px" android:left="-3dp" android:right="-3dp" android:top="-3dp">
                <shape>
                    <stroke android:width="1dp" android:color="@color/gray" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>