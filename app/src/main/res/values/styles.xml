<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="reminder_title" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/remider_background</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="remonder_text">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="dialog_edittext" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/dialog_field_bg</item>
        <item name="android:padding">5dp</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="dialog_button" parent="@android:style/Widget.TextView">

    </style>

